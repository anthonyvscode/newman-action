{
  "name": "newman-action",
  "version": "0.1.0",
  "private": true,
  "description": "Run Postman collections with Newman as a GitHub Action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthonyvscode/newman-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Anthony Zigenbine",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.7.0",
    "newman": "^5.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/newman": "^5.3.0",
    "@types/node": "^17.0.27",
    "@typescript-eslint/parser": "^4.33.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^5.16.0",
    "eslint-plugin-github": "^2.0.0",
    "eslint-plugin-jest": "^24.5.2",
    "jest": "^24.9.0",
    "jest-circus": "^27.5.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^24.3.0",
    "typescript": "^4.9.3"
  }
}
